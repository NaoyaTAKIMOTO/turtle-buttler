{
  "compilerOptions": {
    "target": "es2018",
    "module": "nodenext",
    "outDir": "../dist",
    "rootDir": "../src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["../src/**/*.ts", "../src/**/*.d.ts"],
  "exclude": ["../node_modules", "../apps", "../dist"]
}
